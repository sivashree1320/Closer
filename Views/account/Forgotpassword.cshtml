@model Closer.Models.ForgotPasswordViewModel;

@{
    Layout = null; // remove this if you're using _Layout.cshtml and want to keep the nav/footer
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            background: url('/images/sig') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
        }

        .top-logo {
            position: absolute;
            top: 20px;
            left: 30px;
        }

            .top-logo img {
                width: 100px;
                height: auto;
            }

        .forgot-container {
            width: 360px;
            margin: 120px auto;
            background: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }

            .forgot-container h2 {
                text-align: center;
                margin-bottom: 25px;
                color: #333;
            }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input[type="email"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        .error {
            color: red;
            font-size: 0.85em;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #1f1f1f;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            transition: background 0.3s;
        }

            button:hover {
                background-color: #333;
            }

        .note {
            text-align: center;
            font-size: 0.9em;
            color: #777;
            margin-top: 15px;
        }

        a {
            color: purple;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="top-logo">
        <img src="/images/logo.jpeg" alt="Closer Logo" />
    </div>

    <div class="forgot-container">
        <h2>Forgot Password</h2>

        <form asp-action="ForgotPassword" method="post">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" />
                <span asp-validation-for="Email" class="error"></span>
            </div>

            <button type="submit">Reset Password</button>
        </form>

        <div class="note">
            <a asp-action="SignIn">Back to Sign In</a>
        </div>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }

</body>
</html>
