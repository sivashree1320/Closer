@model List<Closer.Models.MenProduct>

@{
    ViewData["Title"] = "Men's Collection";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h1 style="text-align: center; margin-top: 40px; font-size: 42px; font-weight: bold; color: #1c1c1c;">Men's Collection</h1>

<div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 30px; padding: 40px;">
    @foreach (var product in Model)
    {
        <div style="background: #fff; border-radius: 12px; width: 260px; box-shadow: 0 8px 20px rgba(0,0,0,0.1); padding: 20px; text-align: center; transition: transform 0.3s ease;">
            <img src="@product.ImageUrl" alt="@product.Name" style="width: 100%; height: 300px; object-fit: cover; border-radius: 8px;" />
            <h3 style="margin-top: 15px; font-size: 20px; font-weight: 600;">@product.Name</h3>
            <p style="color: #777; font-size: 14px; margin-top: 8px;">@product.Description</p>
            <h4 style="margin: 12px 0; color: #2e8b57;">₹@product.Price</h4>
            <form asp-controller="Mens" asp-action="AddToCart" method="post">
                <input type="hidden" name="Id" value="@product.Id" />
                <input type="hidden" name="Name" value="@product.Name" />
                <input type="hidden" name="Price" value="@product.Price" />
                <input type="hidden" name="ImageUrl" value="@product.ImageUrl" />
                <button type="submit" style="padding: 10px 20px; background-color: #088178; color: white; border: none; border-radius: 6px; font-weight: bold; cursor: pointer;">Add to Cart</button>
            </form>
        </div>
    }
</div>

<footer style="text-align: center; padding: 20px 0; font-size: 14px; color: #777;">
     @DateTime.Now.Year Closer
</footer>
