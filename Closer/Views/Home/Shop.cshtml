@model List<Closer.Domain.Models.Product>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Shop - Search Results</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        .product-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            margin-top: 30px;
        }

        .product-card {
            width: 220px;
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

            .product-card img {
                width: 100%;
                height: 180px;
                object-fit: cover;
                border-radius: 5px;
            }

            .product-card h4 {
                margin: 10px 0 5px;
            }

            .product-card p {
                margin: 0;
                color: #555;
            }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

        .btn {
            padding: 8px 12px;
            margin-top: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <h2 style="text-align:center; margin-top: 20px;">Search Results</h2>

    @if (Model == null || !Model.Any())
    {
        <p style="text-align:center; color:red;">No products matched your search.</p>
    }
    else
    {
        <div class="product-grid">
            @foreach (var product in Model)
            {
                <div class="product-card">
                    <img src="~/images/@product.ImageUrl" alt="@product.Name" />
                    <h4>@product.Name</h4>
                    <p>₹@product.Price</p>
                    <button class="btn">Add to Cart</button>
                </div>
            }
        </div>
    }

    <div class="back-link">
        <a href="/">← Back to Home</a>
    </div>
</body>
</html>
