
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Kids Products</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('/images/kids.bg.jpg'); /*Make sure the name matches */
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            padding: 20px;
        }
        }
        }

        h2 {
            text-align: center;
            color: #333;
        }

        .product-grid {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        <div style="text-align: center; margin-bottom: 20px;" >
        <a href="/Home/Cart" class="btn" >
        View Cart <i class="fas fa-shopping-cart" > </i >
        </a >
        </div >


        .product-box {
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 10px;
            width: 220px;
            text-align: center;
            background-color: #fff;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        }

            .product-box img {
                width: 100%;
                height: 200px;
                object-fit: cover;
                border-radius: 5px;
            }

            .product-box h4 {
                margin: 10px 0 5px;
                font-size: 18px;
                color: #333;
            }

            .product-box p {
                margin: 0;
                color: #777;
            }

        .btn {
            margin-top: 10px;
            padding: 8px 12px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .back-link {
            display: block;
            margin: 20px 0;
            text-align: center;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

</head>
<body>
    <h2>Kids Clothing Collection</h2>
    @if (TempData["Message"] != null)
    {
        <div style="text-align:center; color: green; font-weight: bold; margin-bottom: 10px;">
            @TempData["Message"]
        </div>
    }


    <div class="product-grid">
        <div class="product-box">
            <img src="~/images/kisd t shirt.jpg" alt="Kids T-shirt" />
            <h4>Kids T-shirt</h4>
            <p>₹1090</p>
            <button class="btn add-to-cart"
                    data-id="1"
                    data-name="Kids T-shirt"
                    data-price="1090"
                    data-image="/images/kisd t shirt.jpg">
                Add to Cart
            </button>


            

        </div>

        <div class="product-box">
            <img src="~/images/kidss.jpg" alt="Kids Frock" />
            <h4>Kids Frock</h4>
            <p>₹2500</p>
            <button class="btn add-to-cart"
                    data-id="2"
                    data-name="Kids frock"
                    data-price="2500"
                    data-image="/images/kisd t shirt.jpg">
                Add to Cart
            </button>


            

        </div>

        <div class="product-box">
            <img src="~/images/kids jacket.jpg" alt="Kids Winter Wear" />
            <h4>Kids Winter Jacket</h4>
            <p>₹4500</p>
            <button class="btn add-to-cart"
                    data-id="3"
                    data-name="Kids jacket"
                    data-price="4500"
                    data-image="/images/kisd t shirt.jpg">
                Add to Cart
            </button>


            
        </div>

        <div class="product-box">
            <img src="~/images/kids jeans.jpg" alt="Kids Jeans" />
            <h4>Kids Jeans</h4>
            <p>₹3500</p>
            <button class="btn add-to-cart"
                    data-id="4"
                    data-name="Kids jeans"
                    data-price="3500"
                    data-image="/images/kisd t shirt.jpg">
                Add to Cart
            </button>


            

        </div>

        <div class="product-box">
            <img src="~/images/kids party.jpg" alt="Kids Dress" />
            <h4>Kids Party Dress</h4>
            <p>₹2000</p>
            <button class="btn add-to-cart"
                    data-id="5"
                    data-name="Kids party Dress"
                    data-price="2000"
                    data-image="/images/kisd t shirt.jpg">
                Add to Cart
            </button>


        

        </div>
    </div>

    <div class="back-link">
        <a href="/Home/Index">← Back to Home</a>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.add-to-cart').click(function () {
                let product = {
                    id: $(this).data('id'),
                    name: $(this).data('name'),
                    price: $(this).data('price'),
                    imageUrl: $(this).data('image')
                };

                let cart = JSON.parse(localStorage.getItem('cart')) || [];

                // Optional: Check if product already exists
                let existing = cart.find(p => p.id === product.id);
                if (!existing) {
                    cart.push(product);
                    localStorage.setItem('cart', JSON.stringify(cart));
                    alert(product.name + " added to cart!");
                } else {
                    alert(product.name + " is already in the cart.");
                }
            });
        });
    </script>

</body>
</html>
