@{
    Layout = null;
}
@model List<Closer.Domain.Models.Product>

@{
    ViewData["Title"] = "Mens Collection";
    Layout = "~/Views/Shared/_Layout.cshtml"; // or null if you don’t use layout
}

<h2 style="text-align:center;">Men's Collection</h2>
<div style="display:flex; flex-wrap:wrap; justify-content:center; gap:30px;">
    @foreach (var product in Model)
    {
        <div style="box-shadow:0 4px 8px rgba(0,0,0,0.1); padding:20px; width:250px; border-radius:10px; text-align:center;">
            <img src="@product.ImageUrl" alt="@product.Name" style="width:100%; height:250px; object-fit:cover;" />
            <h3>@product.Name</h3>
            <p><strong>₹@product.Price</strong></p>
            <form method="post" asp-controller="Cart" asp-action="AddToCart">
                <input type="hidden" name="id" value="@product.Id" />
                <button type="submit" style="padding:10px; background:black; color:white;">Add to Cart</button>
            </form>
        </div>
    }
</div>
